datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin;radmin:radmin"
    mysql_ifaces="0.0.0.0:6032"
    refresh_interval=2000
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033"
    default_schema="information_schema"
    stacksize=1048576
    server_version="8.4.6"
    connect_timeout_server=3000
    monitor_username="monitor"
    monitor_password="monitor"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    ping_interval_server_msec=120000
    ping_timeout_server=500
    commands_stats=true
    sessions_sort=true
    connect_retries_on_failure=10
    have_ssl="true"

    # SSL Configuration
    ssl_p2s_ca="/etc/proxysql/ssl/ca.pem"
    ssl_p2s_cert="/etc/proxysql/ssl/client-cert.pem"
    ssl_p2s_key="/etc/proxysql/ssl/client-key.pem"
    ssl_p2s_cipher="ECDHE-RSA-AES128-GCM-SHA256"
}

# MySQL Servers configuration
mysql_servers =
(
    {
        address="dbmon01.example.com"
        port=3306
        hostgroup=0
        max_connections=100
        use_ssl=1
        comment="Primary MySQL Server"
    },
    {
        address="dbmon02.example.com"
        port=3306
        hostgroup=1
        max_connections=100
        use_ssl=1
        comment="Replica MySQL Server"
    }
)

# MySQL Users configuration
mysql_users =
(
    {
        username = "secure_user"
        password = "SecureUserPass123!"
        default_hostgroup = 0
        active = 1
        use_ssl = 0
    },
    {
        username = "monitor"
        password = "monitor"
        default_hostgroup = 0
        active = 1
        use_ssl = 0
    }
)

# MySQL Query Rules
mysql_query_rules =
(
    {
        rule_id=1
        active=1
        match_pattern="^SELECT .* FOR UPDATE$"
        destination_hostgroup=0
        apply=1
        comment="Route SELECT FOR UPDATE to writer"
    },
    {
        rule_id=2
        active=1
        match_pattern="^SELECT"
        destination_hostgroup=1
        apply=1
        comment="Route SELECT to reader"
    },
    {
        rule_id=3
        active=1
        match_pattern=".*"
        destination_hostgroup=0
        apply=1
        comment="Route all other queries to writer"
    }
)

mysql_replication_hostgroups =
(
    {
        writer_hostgroup=0
        reader_hostgroup=1
        comment="MySQL Replication Hostgroups"
    }
)
